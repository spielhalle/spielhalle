svg([attr.viewBox]="'0 0 '+ (10 * sudokuService.boardSize) + ' ' + (10 * sudokuService.boardSize)",xmlns="http://www.w3.org/2000/svg",(click)="test($event)")
    style.
        .field { font: bold 6px sans-serif; text-anchor:middle; alignment-baseline:central;}
    defs
        pattern(id="smallGrid",width="20",height="20",patternUnits="userSpaceOnUse")
            path(d="M 10 0 L 0 0 0 10 10 10 Z M 20 10 L 10 10 10 20 20 20 Z",fill-opacity="0.2",fill="#000000",stroke="none",stroke-width="0.5",stroke-alignment="inner")
        pattern(id="grid",[attr.width]="sudokuService.boxSize * 10",[attr.height]="sudokuService.boxSize * 10",patternUnits="userSpaceOnUse")
            rect(width="100",height="100",fill="url(#smallGrid)")
            path(d="M 100 0 L 0 0 0 100",fill="none",stroke="gray",stroke-width="1",stroke-alignment="inner")
    rect(width="100%",height="100%",fill="url(#grid)")

    ng-container(*ngFor="let row of sudokuService.field; index as y")
        //button(*ngFor="let column of row; index as x",mat-button,(click)="onClickCell(x, y)") {{ column>0?column:' ' }}
        text(*ngFor="let column of row; index as x",[attr.x]="(x*10) + 5",[attr.y]="(y*10)+5",writing-mode="lr",class="field",) {{ column>0?column:' ' }}
