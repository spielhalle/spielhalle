{
    "name": "@spielhalle/sudoku-pixijs",
    "version": "0.3.0",
    "description": "Sudoku Game",
    "main": "dist/cjs/index.js",
    "module": "dist/esm/index.js",
    "types": "dist/esm/index.d.ts",
    "private": false,
    "scripts": {
        "build": "npm run build:cjs && npm run build:esm",
        "build:esm": "tsc --module es6 --outDir ./dist/esm",
        "build:cjs": "tsc --module CommonJS --outDir ./dist/cjs",
        "test": "mocha --config ../../.mocharc.yml",
        "test:coverage": "nyc --nycrc-path ../../.nycrc.json npm run test",
        "lint": "tslint -c tslint.json -p tsconfig.json src/**/*.ts",
        "lint:fix": "tslint --fix -c tslint.json -p tsconfig.json src/**/*.ts",
        "docs": "typedoc --options ../../typedoc.json",
        "prepublishOnly": "npm run test && npm run docs && npm run build",
        "start": "webpack-dev-server"
    },
    "devDependencies": {
        "clean-webpack-plugin": "^3.0.0",
        "html-webpack-plugin": "^4.3.0",
        "mocha": "~7.1.2",
        "nock": "~12.0.3",
        "style-loader": "^1.2.1",
        "ts-loader": "^7.0.5",
        "tslint": "~6.1.2",
        "typescript": "~3.8.3",
        "webpack": "^4.43.0",
        "webpack-cli": "^3.3.11",
        "webpack-dev-server": "^3.11.0"
    },
    "files": [
        "dist/*",
        "src/*"
    ],
    "homepage": "https://spielhalle.github.io/spielhalle/",
    "author": {
        "name": "donmahallem",
        "email": "donmahallem@users.noreply.github.com",
        "url": "https://github.com/donmahallem"
    },
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/spielhalle/spielhalle/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/spielhalle/spielhalle.git"
    },
    "engines": {
        "node": ">=10.0.0"
    },
    "publishConfig": {
        "access": "public"
    },
    "dependencies": {
        "pixi.js": "^5.2.4"
    }
}
