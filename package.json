{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@donmahallem/rollup-config": "0.2.0",
    "@donmahallem/tslint-config": "0.1.2",
    "@rollup/plugin-commonjs": "18.0.0",
    "@rollup/plugin-node-resolve": "11.2.1",
    "@rollup/plugin-replace": "2.4.2",
    "@rollup/plugin-typescript": "8.2.1",
    "@types/chai": "4.2.16",
    "@types/mocha": "8.2.2",
    "@types/node": "14.14.37",
    "@types/sinon": "9.0.11",
    "chai": "4.3.4",
    "commitizen": "4.2.3",
    "conventional-changelog-angular": "5.0.12",
    "coveralls": "3.1.0",
    "cz-conventional-changelog": "3.3.0",
    "fs-extra": "9.1.0",
    "lerna": "4.0.0",
    "mocha": "8.3.2",
    "nyc": "15.1.0",
    "rollup": "2.44.0",
    "sinon": "10.0.0",
    "ts-node": "9.1.1",
    "tslint": "6.1.3",
    "typedoc": "0.20.35",
    "typescript": "4.2.4"
  },
  "scripts": {
    "build": "lerna run build",
    "test": "lerna run test",
    "test:coverage": "lerna run test:coverage",
    "coverage:merge": "node ./scripts/merge_coverage.js",
    "lint": "lerna run lint",
    "docs": "lerna run docs",
    "lint:fix": "lerna run lint:fix",
    "version-temp": "npx conventional-changelog --preset eslint --release-count 0 --outfile ./CHANGELOG.md --verbose && npx lerna exec --concurrency 1 --stream -- 'conventional-changelog --preset eslint --release-count 0 --pkg ./package.json --outfile ./CHANGELOG.md --verbose'"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
