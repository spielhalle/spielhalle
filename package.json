    "@rollup/plugin-typescript": "~5.0.2",
    "@types/chai": "~4.2.12",
    "@types/mocha": "~8.0.3",
    "@types/node": "~14.6.1",
    "@types/sinon": "~9.0.5",
    "chai": "~4.2.0",
    "commitizen": "~4.2.0",
    "conventional-changelog-angular": "~5.0.11",
