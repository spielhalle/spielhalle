{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@rollup/plugin-commonjs": "17.1.0",
    "@rollup/plugin-node-resolve": "11.2.0",
    "@rollup/plugin-typescript": "8.2.0",
    "@types/chai": "4.2.15",
    "@types/mocha": "8.2.1",
    "@types/node": "14.14.31",
    "@types/sinon": "9.0.10",
    "chai": "4.3.0",
    "commitizen": "4.2.3",
    "conventional-changelog-angular": "5.0.12",
    "coveralls": "3.1.0",
    "cz-conventional-changelog": "3.3.0",
    "fs-extra": "9.1.0",
    "lerna": "3.22.1",
    "mocha": "8.3.0",
    "nyc": "15.1.0",
    "rollup": "2.39.1",
    "sinon": "9.2.4",
    "ts-node": "9.1.1",
    "tslint": "6.1.3",
    "typedoc": "0.20.28",
    "typescript": "4.1.5"
  },
  "scripts": {
    "build": "lerna run build",
    "test": "lerna run test",
    "test:coverage": "lerna run test:coverage",
    "coverage:merge": "node ./scripts/merge_coverage.js",
    "lint": "lerna run lint",
    "docs": "lerna run docs",
    "lint:fix": "lerna run lint:fix",
    "version-temp": "npx conventional-changelog --preset eslint --release-count 0 --outfile ./CHANGELOG.md --verbose && npx lerna exec --concurrency 1 --stream -- 'conventional-changelog --preset eslint --release-count 0 --pkg ./package.json --outfile ./CHANGELOG.md --verbose'"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
