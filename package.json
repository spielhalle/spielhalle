{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@donmahallem/rollup-config": "0.4.7",
    "@donmahallem/tslint-config": "0.2.1",
    "@rollup/plugin-commonjs": "21.0.1",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "13.0.6",
    "@rollup/plugin-replace": "3.0.0",
    "@rollup/plugin-typescript": "8.3.0",
    "@types/chai": "4.2.22",
    "@types/mocha": "9.0.0",
    "@types/node": "16.11.6",
    "@types/sinon": "10.0.6",
    "chai": "4.3.4",
    "commitizen": "4.2.4",
    "conventional-changelog-angular": "5.0.13",
    "coveralls": "3.1.1",
    "cz-conventional-changelog": "3.3.0",
    "fs-extra": "10.0.0",
    "lerna": "4.0.0",
    "mocha": "9.1.3",
    "nyc": "15.1.0",
    "rollup": "2.58.3",
    "sinon": "11.1.2",
    "ts-node": "10.4.0",
    "tslib": "2.3.1",
    "tslint": "6.1.3",
    "typedoc": "0.22.7",
    "typescript": "4.4.4"
  },
  "scripts": {
    "build": "lerna run build",
    "test": "lerna run test",
    "test:coverage": "lerna run test:coverage",
    "coverage:merge": "node ./scripts/merge_coverage.js",
    "lint": "lerna run lint",
    "docs": "lerna run docs",
    "lint:fix": "lerna run lint:fix",
    "version-temp": "npx conventional-changelog --preset eslint --release-count 0 --outfile ./CHANGELOG.md --verbose && npx lerna exec --concurrency 1 --stream -- 'conventional-changelog --preset eslint --release-count 0 --pkg ./package.json --outfile ./CHANGELOG.md --verbose'"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
