{
    "compilerOptions": {
        "target": "ES2015",
        "module": "ESNext",
        "sourceMap": true,
        "esModuleInterop": true,
        "declaration": true,
        "moduleResolution": "node",
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
    },
    "typeAcquisition": {
        "enable": true
    },
    "exclude": [
        "node_modules"
    ],
    "baseUrl": "./src"
}
